{
    "Lua.runtime.version": "LuaJIT",
    "Lua.type.weakUnionCheck": true,
    "Lua.diagnostics.disable": [
        "duplicate-set-field",
        "need-check-nil",
        "undefined-global"
    ],
    "Lua.type.weakNilCheck": true,
    "Lua.runtime.special": {
        "modRequire": "require"
    },
    "Lua.workspace.library": [
        "${3rd}/love2d/library",
        "${env:KRISTAL_PATH}",
        "${extensionInstallFolder:tomblind.local-lua-debugger-vscode}/debugger"
    ],
    "Lua.runtime.builtin": {
        "utf8": "enable"
    }
}